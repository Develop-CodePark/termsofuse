
<nav class="row nav-top sticky-top" ng-init="getQuestionViewDetails()">
    <div class="col-3 pt-2 pd-3 nav-codepark-logo">
        <a href="/dashboard"><img class="codepark-logo codepark-logo-md float-right" src="/images/logo_codepark.jpg" alt="CodePark Logo"></a>
    </div>
    <div class="col-6 pt-3 nav-text">
        CodePark
    </div>
    <div class="col-3 pt-2 nav-user-image">
        <!-- profile image -->
        <div class="dropdown-container">
            <div class="#" title="{{currUser.fullName}}">
                <img src="{{questionData.askedBy_profileImage}}" alt="{{questionData.askedBy_name.firstName}}" class="img-fluid rounded-circle avatar-small user-avatar">
            </div>
            <!-- Dropdown menu -->
            <ul class="dropdown-animated">
                <li><a href="#">Html</a></li>
                <li><a href="#">CSS</a></li>
                <li>JS</li>
                <li>Bootstrap</li>
            </ul>
        </div>
    </div>
